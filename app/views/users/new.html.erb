<div class="container-user">
  <h1>Sign Up</h1>

  <div class="user-signup">
  <%= form_with model: @user, html: {class: "user-form"} do |f| %>
    <%= f.label :email, class: "input-label" %>
    <%= f.text_field :email, class: "input-box" %>
    <%= f.label :password, class: "input-label" %>
    <%= f.password_field :password, class: "input-box" %>
    <%= f.label :password_confirmation, class: "input-label" %>
    <%= f.password_field :password_confirmation, class: "input-box" %>
    <%= f.submit id: "submit-button" %>
  <% end %>
  </div>
</div>
