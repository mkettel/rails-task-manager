<div class="container" style="text-align: center; max-width: 1100px; margin: 0px auto">
  <div class="title">
    <%= link_to root_path, class: "task-link" do%>
      <h2><%= @task.title %></h2>
    <% end %>
  </div>
  <div class="description" style="border: 1px solid black; border-radius: 5px; margin-bottom: 15px; background-color: lightgrey">
    <p style="font-size: 18px"><%= @task.details %></p>
  </div>
  <div class="completion-status">
    <% if @task.completed == true %>
      <label><input type="checkbox" name="html" value="html" checked> The task is completed!</label>
    <% else %>
      <label><input type="checkbox" name="html" value="html"> The task is NOT completed.</label>
    <% end %>
  </div>
  <div class="edit-task">
    <%= link_to edit_task_path, class: "task-link" do%>
      <h3>Edit Task</h3>
    <% end %>
  </div>
</div>
