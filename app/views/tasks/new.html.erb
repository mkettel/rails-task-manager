<div class="container" style="text-align: center; max-width: 1100px; margin: 0px auto">
  <div class="title">
    <%= link_to root_path, class: "task-link" do%>
      <%# can add a link to home here if i want  %>
    <h2>Add a New Task</h2>
    <% end %>
  </div>
  <div class="task-form">
    <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.submit %>
  <% end %>
  </div>
</div>
